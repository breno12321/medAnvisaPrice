{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "declaration": true,
    "allowJs": true,
    "outDir": "./build",
    "removeComments": true,
    // "baseUrl": ".",
    "rootDir": "./src",
    "typeRoots": [
    "./src/@types",
    "./node_modules/@types"
  ],
  "esModuleInterop": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true
},
"include": ["src/**/*"],
"exclude": ["node_modules", "**/*.spec.ts"]
}
